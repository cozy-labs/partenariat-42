mixin history_row(user)
	tr
		td #{user.name}
		td #{user.share}
		td #{user.amount}



.panel.panel-default
	.panel-heading.header-history-elem
		span  #{transfer.name}
		span(style='float: right') #{transfer.amount}

	.panel-body(style='display: none')
		if transfer.title
			h3 #{transfer.title}
		if transfer.description
			p #{transfer.description}
		if transfer.date
			p Date: #{transfer.date}
		table.table
			thead
				tr
					th Name
					th %
					th Amount
			tbody
				for user in transfer.users
					+history_row(user)
		button#delete-history-elem.btn.btn-default.btn-block Delete
		button#update-history-elem.btn.btn-default.btn-block Modify
